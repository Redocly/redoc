{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "jsx": "react",
    "lib": ["esnext", "dom", "WebWorker.ImportScripts"],
    "moduleResolution": "node",
    "noEmitHelpers": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "lib",
    "pretty": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "es5",
    "types": ["webpack", "webpack-env", "jest"]
  },
  "compileOnSave": false,
  "exclude": ["node_modules", ".tmp", "lib", "e2e/**"],
  "include": [
    "./custom.d.ts",
    "./demo/playground/hmr-playground.tsx",
    "./src/**/*.ts?",
    "demo/*.tsx",
    "src/empty.js"
  ]
}
